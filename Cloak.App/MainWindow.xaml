<Window x:Class="Cloak.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cloak" Height="540" Width="380" WindowStartupLocation="CenterScreen"
        Topmost="True">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" LastChildFill="False" VerticalAlignment="Center">
            <TextBlock Text="Cloak - Meeting Copilot" FontSize="16" FontWeight="Bold" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Right" >
                <TextBlock Text="Capture:" VerticalAlignment="Center" Margin="12,0,6,0"/>
                <ComboBox Name="CaptureMode" Width="130" SelectedIndex="0">
                    <ComboBoxItem Content="Microphone"/>
                    <ComboBoxItem Content="System"/>
                    <ComboBoxItem Content="Both"/>
                </ComboBox>
                <Button Name="SuggestNowButton" Content="Suggest now" Margin="8,0,0,0" Click="OnSuggestNowClick"/>
            </StackPanel>
        </DockPanel>

        <Border Grid.Row="1" BorderBrush="#DDD" BorderThickness="1" CornerRadius="6" Padding="8">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="Live Transcript" FontWeight="Bold" Margin="0,0,0,6"/>
                    <ItemsControl Name="TranscriptItems" />

                    <Separator Margin="0,10,0,10"/>

                    <TextBlock Text="Suggestions" FontWeight="Bold" Margin="0,0,0,6"/>
                    <ItemsControl Name="SuggestionItems">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <DockPanel LastChildFill="True" Margin="0,0,0,6">
                                    <TextBlock Text="{Binding}" TextWrapping="Wrap" Margin="0,0,8,0"/>
                                    <Button Content="Copy" Click="OnCopySuggestionClick" Tag="{Binding}"/>
                                </DockPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Name="StartButton" Width="90" Height="28" Margin="0,0,8,0" Content="Start" Click="OnStartClick"/>
            <Button Name="StopButton" Width="90" Height="28" Content="Stop" Click="OnStopClick"/>
            <Button Name="ExportButton" Width="120" Height="28" Margin="8,0,0,0" Content="Export MD" Click="OnExportClick"/>
        </StackPanel>
    </Grid>
</Window>

